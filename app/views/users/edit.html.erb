<h1>Edit User</h1>

<%= form_with(model: @user, url: user_path(@user), method: :patch) do |form| %>
  <div>
    <%= form.label :full_name %>
    <%= form.text_field :full_name %>
  </div>

  <div>
    <%= form.label :tools %>
    <% Tool.all.each do |tool| %>
      <label>
        <%= check_box_tag "user[tool_ids][]", tool.id, @user.tools.include?(tool) %>
        <%= tool.name %>
      </label><br>
    <% end %>
  </div>

  <div>
    <%= form.submit "Update User" %>
    <%= link_to "Cancel", user_path %>
  </div>
<% end %>