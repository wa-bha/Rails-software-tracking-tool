<h1>Edit Tool</h1>

<%= form_with(model: @tool, url: tool_path(@tool), method: :patch) do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :category %>
    <%= form.collection_select(:category_id, Category.all, :id, :name, prompt: "Select a category") %>
  </div>

  <div>
    <%= form.label :users %>
    <% User.all.each do |user| %>
      <label>
        <%= check_box_tag "tool[user_ids][]", user.id, @tool.users.include?(user) %>
        <%= user.full_name %>
      </label><br>
    <% end %>
  </div>

  <div>
    <%= form.submit "Update Tool" %>
    <%= link_to "Cancel", tools_path %>
  </div>
<% end %>
