<p style="color: green"><%= notice %></p>

<h1>List of Tools</h1>
<%= link_to "View all Users", users_path %>
<%= link_to "View all Categories", categories_path %>
<%= link_to "Add New Tool", new_tool_path %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Users</th>
      <th>Category</th>
    </tr>
  </thead>
  <tbody>
    <% @tools.each do |tool| %>
      <tr>
        <td style="border: 1px solid #333"> <%= link_to tool.name, tool %> </td>
        <td style="border: 1px solid #333">
          <% tool.users.each do |user| %>
            <%= user.full_name %>, 
          <% end %>
        </td>
        <td style="border: 1px solid #333">
          <%= link_to tool.category&.name, tool.category if tool.category %> 
        </td>
      </tr>
    <% end %>
  </tbody>
</table>